doctype 5
html(ng-app="admin", ng-controller="AppCtrl")
	head
		meta(charset="utf-8")
		title Edit

		link(rel="stylesheet", href="/style/css/bootstrap.min.css")
		link(rel="stylesheet", href="/style/css/edit.css")
			
		script(src="https://www.parse.com/downloads/javascript/parse-1.2.12.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js")
		script(src="//netdna.bootstrapcdn.com/bootstrap/3.0.1/js/bootstrap.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular.min.js")
		script(src="//ajax.googleapis.com/ajax/libs/angularjs/1.0.7/angular-resource.min.js")

		script(src="/js/app.js")
		script(src="/js/controllers/EditCtrl.js")
		script(src="/js/controllers/AppCtrl.js")
		script(src="/js/controllers/TestsCtrl.js")
		script(src="/js/controllers/TestCtrl.js")
		script(src="/js/service.js")

	body
		.container
			.row-fluid
				.span12
					.navbar.navbar-fixed-top.navbar-inverse
						.navbar-inner
							.container
								.nav-collapse.collapse
									ul.nav
										li(ng-class="{true:'active'}[path=='/edit']")
											a(href="#/edit") Редактировать главную
										li(ng-class="{true:'active'}[path=='/tests']")
											a(href="#/tests") Тесты
										li(ng-class="{true:'active'}[path=='/message']")
											a(href="#/message") Отзывы

					.tabs(ng-view)
